<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aranatwal.moneytime.MainActivity">

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/salary_input"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/salary_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/incrementer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/salary_counter"/>

    <Button
        android:id="@+id/salary_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Salary"
        android:layout_alignParentBottom="true"
        android:clickable="true"/>

</RelativeLayout>
